<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7FB">

    <!-- AFL Logo at Top -->
    <ImageView
        android:id="@+id/imgAflLogo"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:src="@drawable/afllogo"
        android:contentDescription="AFL Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView showing Player Stats -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlayerStats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgAflLogo"
        app:layout_constraintBottom_toTopOf="@id/btnComparePlayers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Compare Players Button at Bottom -->
    <Button
        android:id="@+id/btnComparePlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compare Players"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

